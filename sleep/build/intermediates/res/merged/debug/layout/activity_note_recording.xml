<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cbg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48dp"
        android:background="@color/theme_color"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/icon_return"
            android:paddingLeft="@dimen/x10dp"
            android:paddingRight="@dimen/x14dp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/x15dp"
            android:paddingRight="@dimen/x15dp"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/ts_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_titles" />

        <Button
            android:id="@+id/btn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_gray1_bg"
            android:drawablePadding="@dimen/x1dp"
            android:paddingLeft="@dimen/x15dp"
            android:paddingRight="@dimen/x15dp"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/ts_content"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/x8dp" >

            <EditText
                android:id="@+id/recording_edit_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cbg_color"
                android:gravity="top"
                android:lines="15"
                android:padding="@dimen/x4dp"
                android:textColor="@color/onet_color"
                android:textSize="@dimen/textsize_small"
                android:textCursorDrawable="@null" >

                <requestFocus />
            </EditText>

            <!-- <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_setting_line_height"
                android:visibility="gone"
                android:background="@color/fct_color_7f" />

            <TextView
                android:id="@+id/release_edit_lenth_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cbg_color"
                android:gravity="right"
                android:padding="5dp"
                android:textColor="@color/fct_color" /> -->
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
