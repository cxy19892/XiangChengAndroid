<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x10dp" 
    android:paddingRight="@dimen/x10dp"
    android:paddingTop="@dimen/x10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_coffe_normal"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/fct_color"
        android:textSize="@dimen/ts_content" />

    <ImageView
        android:id="@+id/iv_posi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x14dp"
        android:visibility="gone"
        android:background="@drawable/triangle_target" />

</LinearLayout>