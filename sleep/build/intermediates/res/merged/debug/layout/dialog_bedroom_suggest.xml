<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/rl_su"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/custon_content_bg"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:padding="@dimen/x50dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zhuanjia_big" />

        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/fct_color"
            android:textSize="@dimen/ts_sub" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/custon_content_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/x8dp" >

        <com.yzm.sleep.CircleImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/x60dp"
            android:layout_height="@dimen/x60dp"
            android:background="#ffffff"
            android:src="@drawable/about_logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12dp"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8dp"
            android:text="点击卡牌,出现相关建议"
            android:visibility="gone"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/ts_min" />
    </LinearLayout>

</RelativeLayout>