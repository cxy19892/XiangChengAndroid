<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x9dp"
                android:layout_marginLeft="@dimen/x12dp"
                android:layout_marginTop="@dimen/x12dp"
                android:text="通知"
                android:textColor="@color/fct_color"
                android:textSize="@dimen/ts_sub" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/layoutForumMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="论坛消息"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <CheckBox
                    android:clickable="false"
                    android:id="@+id/cbForumMessage"
                    android:layout_width="@dimen/x18dp"
                    android:layout_height="@dimen/x18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:background="@drawable/app_setting_select_check"
                    android:button="@null"
                    android:checked="false" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutReceiverChatMessage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="聊天信息提醒"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <CheckBox
                    android:id="@+id/cbReceiverChatMessage"
                    android:layout_width="@dimen/x18dp"
                    android:layout_height="@dimen/x18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:background="@drawable/app_setting_select_check"
                    android:button="@null"
                    android:checked="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:visibility="gone"
                    android:background="@color/bg_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutRemindSleep"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x12dp"
                        android:text="睡前提醒"
                        android:textColor="@color/onet_color"
                        android:textSize="@dimen/ts_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x12dp"
                        android:layout_marginTop="2dp"
                        android:text="睡前提醒是根据您昨日睡觉情况进行的提醒"
                        android:textColor="@color/fct_color"
                        android:textSize="@dimen/ts_sub" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbRemindSleep"
                    android:layout_width="@dimen/x18dp"
                    android:layout_height="@dimen/x18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:background="@drawable/app_setting_select_check"
                    android:button="@null"
                    android:checked="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x9dp"
                android:layout_marginLeft="@dimen/x12dp"
                android:layout_marginTop="@dimen/x12dp"
                android:text="账户"
                android:textColor="@color/fct_color"
                android:textSize="@dimen/ts_sub" />

            <RelativeLayout
                android:id="@+id/layoutCommunityAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="社交账户"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:src="@drawable/icon_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x9dp"
                android:layout_marginLeft="@dimen/x12dp"
                android:layout_marginTop="@dimen/x12dp"
                android:text="其他"
                android:textColor="@color/fct_color"
                android:textSize="@dimen/ts_sub" />

            <RelativeLayout
                android:id="@+id/layoutCleanCache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="清理缓存"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:src="@drawable/icon_right" />

                <TextView
                    android:id="@+id/tvCleanSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:layout_toLeftOf="@id/iv1"
                    android:text="0.0M"
                    android:textColor="@color/ct_color"
                    android:textSize="@dimen/ts_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutVersionsDetection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="版本检测"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <ImageView
                    android:id="@+id/iv_update_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_padding_small"
                    android:layout_toRightOf="@id/tv_version"
                    android:background="@drawable/update_icon"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:src="@drawable/icon_right" />

                <TextView
                    android:id="@+id/tvVersionsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:layout_toLeftOf="@id/iv2"
                    android:text="0.0.0"
                    android:textColor="@color/ct_color"
                    android:textSize="@dimen/ts_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutFiveStarComment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="香橙官网"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:src="@drawable/icon_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutAboutXiangcheng"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50dp"
                android:background="@drawable/comm_bg_listview_item"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:text="关于香橙"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12dp"
                    android:src="@drawable/icon_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x12dp"
                    android:background="@color/bg_color"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>