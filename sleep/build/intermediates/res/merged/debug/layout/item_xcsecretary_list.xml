<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x25dp"
        android:layout_marginRight="@dimen/x40dp"
        android:background="@drawable/custon_content_bg" >

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x8dp"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/ts_content" />

        <RelativeLayout
            android:id="@+id/has_link"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40dp"
            android:layout_below="@id/msg_content"
            android:background="@drawable/custom_bottom_fillet"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/vv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10dp"
                android:src="@drawable/right_button" />

            <TextView
                android:id="@+id/msg_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_toLeftOf="@id/vv"
                android:gravity="center_vertical"
                android:padding="@dimen/x8dp"
                android:singleLine="true"
                android:textColor="@color/onet_color"
                android:textSize="@dimen/ts_content" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10dp" 
        android:background="#00000000"
        android:layout_below="@id/rl"/>

</RelativeLayout>