<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cbg_color"
    android:layout_marginBottom="48dp"
    >
    <RelativeLayout
            android:id="@+id/layout_pop"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_marginTop="48dp"
            android:layout_height="@dimen/btn_height_normal"
            android:background="@drawable/popwindow_help_bg_img"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_padding_normal" >

            <ImageButton
                android:id="@+id/ib_w_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/common_tab_bg"
                android:src="@drawable/popwindow_help_button" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding_small"
                android:layout_toRightOf="@id/ib_w_help"
                android:text="不懂香橙点这里"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_normal" />

            <Button
                android:id="@+id/btn_use_help"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding_normal"
                android:layout_toRightOf="@id/tv"
                android:background="@null"
                android:gravity="center"
                android:text="使用说明"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/textsize_normal" />

            <ImageButton
                android:id="@+id/ib_popwindow_close"
                android:layout_width="@dimen/btn_width_normal"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_tab_bg"
                android:src="@drawable/popwindow_help_clase_button" />
        </RelativeLayout>
        <android.support.v4.view.ViewPager
	        android:id="@+id/viewpager"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="48dp"
	        android:layout_gravity="center" >
	    </android.support.v4.view.ViewPager>
	    <android.support.v4.view.ViewPager
	        android:id="@+id/pillow_content"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="48dp"
	        />
	    <Button 
            android:id="@+id/pillow_pull_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pull_down_bg"
            android:padding="10dp"
            android:layout_marginTop="48dp"
            android:text="@string/bind_pillow_text13"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
	    <Button 
            android:id="@+id/pillow_pull_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pull_up_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-2dp"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_marginTop="48dp"
            android:text="@string/bind_pillow_text14"
            android:textSize="14sp"
            android:textColor="#152A46"/>
	    
	    <RelativeLayout
	        android:id="@+id/layout_title"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/title_height"
	        android:background="@color/title_bar_bg" >
	
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_centerInParent="true"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/tv_title"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/onet_color"
	                android:textSize="@dimen/textsize_title" />
	        </LinearLayout>
	
	        <Button
	            android:id="@+id/btn_week_view"
	            android:layout_width="@dimen/btn_width_large"
	            android:layout_height="fill_parent"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/common_tab_bg"
	            android:text="周视图"
	            android:textColor="@color/t_color"
	            android:textSize="@dimen/textsize_normal" />
    </RelativeLayout>
</RelativeLayout>