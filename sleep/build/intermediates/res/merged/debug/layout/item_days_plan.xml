<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cbg_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/x16dp"
        >

    <TextView
        android:id="@+id/item_days_plan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_days_plan_done"
        android:paddingBottom="@dimen/x16dp"
        android:paddingLeft="@dimen/x16dp"
        android:paddingTop="@dimen/x16dp"
        android:text=""
        android:textColor="@color/onet_color"
        android:textSize="@dimen/ts_sub" />

    <Button
        android:id="@+id/item_days_plan_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingTop="@dimen/x4dp"
        android:paddingBottom="@dimen/x4dp"
        android:paddingLeft="@dimen/x4dp"
        android:gravity="right|center_vertical"
        android:text="已完成"
        android:textSize="@dimen/ts_sub"
        android:textColor="@color/onet_color" />

    <ImageView
        android:id="@+id/item_days_plan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignRight="@+id/item_days_plan_done"
        android:layout_centerVertical="true"
        android:src="@drawable/ic__right" />

	</RelativeLayout>
	<View 
	    android:id="@+id/item_days_plan_lines"
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="@color/bg_color"/>
</LinearLayout>
