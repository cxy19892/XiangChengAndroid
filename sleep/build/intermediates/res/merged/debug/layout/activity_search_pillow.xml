<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sarch_pillow_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fct_color"
        android:paddingTop="@dimen/x20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/tips_sarch_pillow_1" />
    
    <TextView
        android:id="@+id/sarch_pillow_tips_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sarch_pillow_tips"
        android:textColor="@color/ct_color"
        android:paddingTop="@dimen/x5dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/tips_sarch_pillow_3" />
    
        
    <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:background="@drawable/tranceparent_button_bg"
            android:paddingBottom="@dimen/x10dp"
            android:layout_marginLeft="@dimen/x20dp"
            android:layout_marginRight="@dimen/x20dp"
            android:paddingTop="@dimen/x10dp"
            android:text="@string/cancel"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/textsize_large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/search_device_sigl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bluetooth_signal_img_no4" />

        <ImageView
            android:id="@+id/search_device_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/search_device_sigl"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x40dp"
            android:src="@drawable/linellae_xiangcheng_img" />

        <ImageView
            android:id="@+id/search_device_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_device_sigl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x25dp"
            android:src="@drawable/linellae_phone_img" />

    </RelativeLayout>
    
</RelativeLayout>
