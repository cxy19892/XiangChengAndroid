<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white_bg" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/dialog_pillow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="#333333"/>
        <TextView 
            android:id="@+id/dialog_pillow_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/dialog_pillow_title"
            android:textSize="16sp"
            android:textColor="#333333"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dialog_pillow_sub"
            android:background="#888888"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_pillow_sub"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/dialog_pillow_use_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_gray1_bg"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="#FF6756"/>
            
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
