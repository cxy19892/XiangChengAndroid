<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/cbg_color"
    android:layout_height="wrap_content" >

	<ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"
            android:listSelector="@drawable/comm_bg_listview_item"
            android:indeterminateDrawable="@drawable/progress_icon_comm"
            android:indeterminateDuration="500" />
        <ProgressBar
            android:id="@+id/pb"
            style="@style/MyProDialogConn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDuration="300"
            android:visibility="gone" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/xlistview_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="正在加载更多..." />

</LinearLayout>