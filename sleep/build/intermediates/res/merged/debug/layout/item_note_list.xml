<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x16dp"
    android:background="@color/cbg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_select_icon"
        android:layout_width="@dimen/x20dp"
        android:layout_height="@dimen/x20dp"
        android:src="@drawable/binding"
        android:layout_marginRight="@dimen/x10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ct_color"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/x10dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="@dimen/ts_sub"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_note_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fct_color"
        android:textSize="@dimen/ts_sub"
        android:text="TextView" />

</LinearLayout>
