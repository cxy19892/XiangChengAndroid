<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View
        android:id="@+id/music_tag"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:background="@color/orange"/>

    <TextView
        android:id="@+id/music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/music_tag"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10sp"
        android:textColor="@color/onet_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/music_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_title"
        android:layout_toRightOf="@id/music_tag"
        android:paddingBottom="10sp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/ct_color"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#7f666666"
        android:layout_toRightOf="@id/music_tag"
        android:layout_below="@id/music_summary"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>