<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivClinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_tomap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comm_bg_listview_item"
        android:orientation="vertical"
        android:padding="@dimen/x10dp" >

        <ImageView
            android:id="@+id/ivb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x12dp"
            android:background="@drawable/community_homepage_arrow" />

        <TextView
            android:id="@+id/tvClinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x12dp"
            android:layout_toLeftOf="@id/ivb"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/ts_content" />

        <TextView
            android:id="@+id/tvAdddrss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvClinicName"
            android:layout_marginRight="@dimen/x12dp"
            android:layout_marginTop="@dimen/x6dp"
            android:layout_toLeftOf="@id/ivb"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/ts_sub" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10dp"
        android:layout_marginRight="@dimen/x10dp"
        android:layout_marginTop="@dimen/x16dp"
        android:background="@drawable/custom_button_bg"
        android:padding="@dimen/x14dp"
        android:text="我要问问"
        android:textColor="@color/ct_color"
        android:textSize="@dimen/ts_btn" />

    <LinearLayout
        android:id="@+id/lin_doctor_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16dp"
        android:background="@color/cbg_color"
        android:orientation="horizontal"
        android:padding="@dimen/x10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_hospital_doctor"
            android:textColor="@color/fct_color"
            android:textSize="@dimen/ts_sub" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="@string/string_words_more"
            android:textColor="@color/fct_color"
            android:textSize="@dimen/ts_sub" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_doctor_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cbg_color"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10dp"
        android:paddingTop="@dimen/x10dp" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_product_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10dp"
        android:background="@color/cbg_color"
        android:orientation="horizontal"
        android:padding="@dimen/x10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_pros_and_services"
            android:textColor="@color/fct_color"
            android:textSize="@dimen/ts_sub" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="@string/string_words_more"
            android:textColor="@color/fct_color"
            android:textSize="@dimen/ts_sub" />
    </LinearLayout>

</LinearLayout>