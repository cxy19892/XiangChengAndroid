<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_padding_xsmall"
        android:layout_marginTop="@dimen/margin_padding_xsmall"
        android:background="@drawable/bg_poppuwindow_filtrate"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_tab_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_padding_small"
            android:paddingTop="@dimen/margin_padding_small" >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_document_send_message"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发送消息"
                android:layout_marginLeft="@dimen/margin_padding_xsmall"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_tab_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_padding_small"
            android:paddingTop="@dimen/margin_padding_small" >
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/personal_document_delete_friend"/>
            <TextView
                android:layout_marginLeft="@dimen/margin_padding_xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="删除好友"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>