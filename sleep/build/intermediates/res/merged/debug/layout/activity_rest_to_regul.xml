<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_dark" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rel_thinking"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/cbg_color"
                android:paddingRight="@dimen/x16dp" >

                <ImageView
                    android:id="@+id/img_thinking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x16dp"
                    android:src="@drawable/ic_mingxiang" />

                <TextView
                    android:id="@+id/tv_title_thinking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_thinking"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_thinking"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_context_thinking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_thinking"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_thinking"
                    android:textSize="@dimen/ts_sub"
                    android:textColor="@color/ct_color"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_writing"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="1dip"
                android:background="@color/cbg_color"
                android:visibility="gone"
                android:paddingRight="@dimen/x16dp" >

                <ImageView
                    android:id="@+id/img_writing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x16dp"
                    android:src="@drawable/ic_jishi" />

                <TextView
                    android:id="@+id/tv_title_writing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_writing"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_writing"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_context_writing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_writing"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_writing"
                    android:textSize="@dimen/ts_sub"
                    android:textColor="@color/ct_color"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_seeingg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="1dip"
                android:background="@color/cbg_color"
                android:visibility="gone"
                android:paddingRight="@dimen/x16dp" >

                <ImageView
                    android:id="@+id/img_seeing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x16dp"
                    android:src="@drawable/ic_anwei" />

                <TextView
                    android:id="@+id/tv_title_seeing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_seeing"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_seeing"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_context_seeing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title_seeing"
                    android:layout_marginLeft="@dimen/x10dp"
                    android:layout_marginTop="@dimen/x10dp"
                    android:layout_toRightOf="@+id/img_seeing"
                    android:textSize="@dimen/ts_sub"
                    android:textColor="@color/ct_color"
                    android:text="" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>