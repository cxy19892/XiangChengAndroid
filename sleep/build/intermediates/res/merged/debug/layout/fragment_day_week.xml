<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff">
    <com.yzm.sleep.pulltorefresh.PullToRefreshScrollView 
        android:id="@+id/day_week_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            android:background="@drawable/pillow_fragment_bg"
            android:orientation="vertical">
            
            <LinearLayout 
                android:id="@+id/tips_hint_user_to_pulldown_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_padding_small"
               	android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView 
	                android:id="@+id/tips_hint_user_to_pulldown_img"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@anim/tips_hint_user_to_pulldown"
	                />
                <TextView 
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="下拉同步"
                	android:textColor="#ffffff"
                	android:textSize="12sp"/>
            </LinearLayout>
            <Button 
                android:id="@+id/pillow_day_back_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/pillow_back_page_first"/>
            <TextView 
                android:id="@+id/pillow_day_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pillow_day_back_first"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
            <com.yzm.sleep.widget.OrangeDayDataTable 
                android:id="@+id/pillow_day_tab1_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/pillow_day_state_tv"/>
            
            <LinearLayout 
                android:id="@+id/pillow_day_tab1_lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:layout_below="@id/pillow_day_tab1_form"
                android:orientation="horizontal">
                <View 
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#7ECEF4"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深度睡眠"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
                <ProgressBar 
                    android:id="@+id/pillow_day_tab1_lin1_bar"
                    android:layout_width="160dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="10dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"/>
                <TextView 
                    android:id="@+id/pillow_day_tab1_lin1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/pillow_day_tab1_lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:layout_below="@id/pillow_day_tab1_lin1"
                android:orientation="horizontal">
                <View 
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#BCD029"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浅度睡眠"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
                <ProgressBar 
                    android:id="@+id/pillow_day_tab1_lin2_bar"
                    android:layout_width="160dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="10dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"/>
                <TextView 
                    android:id="@+id/pillow_day_tab1_lin2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/pillow_day_tab1_lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:layout_below="@id/pillow_day_tab1_lin2"
                android:orientation="horizontal">
                <View 
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="#EB6100"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清醒时间"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
                <ProgressBar 
                    android:id="@+id/pillow_day_tab1_lin3_bar"
                    android:layout_width="160dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="10dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"/>
                <TextView 
                    android:id="@+id/pillow_day_tab1_lin3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/pillow_day_tv_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/pillow_fragment_lin_bg"
                android:layout_below="@id/pillow_day_tab1_lin3"
                android:orientation="horizontal">
                
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入睡时刻"
                        android:textSize="14sp"
                        android:textColor="#ffffff"/>
                    <TextView 
                        android:id="@+id/pillow_day_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>
                <View 
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#7fffffff"/>
                
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="睡眠时长"
                        android:textSize="14sp"
                        android:textColor="#ffffff"/>
                    <TextView 
                        android:id="@+id/pillow_day_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>
                <View 
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#7fffffff"/>
                
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="醒来时刻"
                        android:textSize="14sp"
                        android:textColor="#ffffff"/>
                    <TextView 
                        android:id="@+id/pillow_day_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>
            
            <RelativeLayout 
		        android:id="@+id/pillow_day_tab2"
		        android:layout_width="400dp"
		        android:layout_height="400dp"
		        android:layout_marginTop="20dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/pillow_day_tv_lin">
                <com.yzm.sleep.widget.PentagonView
                    android:id="@+id/pillow_day_tab2_form"
                    android:layout_width="match_parent"
		       		android:layout_height="match_parent"
		       		/>
	        </RelativeLayout>
        </RelativeLayout>
    </com.yzm.sleep.pulltorefresh.PullToRefreshScrollView>
</RelativeLayout>
