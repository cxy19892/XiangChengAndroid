<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include 
        android:id="@+id/rl_title"
        layout="@layout/title_layout_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x48dp"
        android:background="@color/bg_color"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x20dp" >

            <RelativeLayout
                android:id="@+id/rl_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚上几点上床"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/gobed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/gobed_time"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_gobed_time"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_question_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="几点尝试入睡"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/try_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/try_time"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_try_time"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_question_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花多长时间入睡"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/spend_sleep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv3"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/spend_sleep_time"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_spend_sleep_time"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>

