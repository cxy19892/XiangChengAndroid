            <RelativeLayout
                android:id="@+id/rl_question_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中途醒来总时长"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/wake_time_lenght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv4"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/wake_time_lenght"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_wake_time_lenght"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_question_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早晨几点醒来"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/getup_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv5"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/getup_time"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_getup_time"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_question_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比计划早醒多久"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/early_wake_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv6"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/early_wake_length"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_early_wake_length"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_question_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x20dp"
                android:paddingLeft="@dimen/x30dp">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早上几点离床"
                    android:textColor="@color/onet_color"
                    android:textSize="@dimen/ts_content" />

                <TextView
                    android:id="@+id/leave_bed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv7"
                    android:textColor="@color/fct_color"
                    android:layout_marginTop="@dimen/x4dp"
                    android:textSize="@dimen/ts_sub" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/leave_bed_time"
                    android:background="@color/fct_color"
                    android:layout_marginTop="@dimen/x20dp"/>

                <TextView
                    android:id="@+id/btn_leave_bed_time"
                    android:layout_width="@dimen/x60dp"
                    android:layout_height="@dimen/x35dp"
                    android:text="选择"
                    android:gravity="center"
                    android:background="@drawable/custom_bg11"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x15dp"
                    android:textSize="@dimen/ts_content"
                    android:textColor="@color/onet_color"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>