<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x11dp"
        android:layout_marginRight="@dimen/x11dp"
        android:background="@drawable/comm_bg_listview_item"
        android:layout_marginTop="@dimen/x11dp"
        android:orientation="vertical" >
        
        <ImageView 
            android:id="@+id/img_medical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            />
        <TextView 
            android:id="@+id/tv_medicalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_content"
            android:layout_below="@id/img_medical"
            android:textColor="@color/onet_color"
            android:layout_marginTop="@dimen/x13dp"
             android:layout_marginLeft="@dimen/x14dp"
            android:text="北京同仁堂"
            />
        
        <TextView 
            android:id="@+id/tv_medicalCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_sub"
            android:textColor="@color/fct_color"
            android:layout_below="@id/tv_medicalName"
            android:layout_marginTop="@dimen/x8dp"
             android:layout_marginRight="@dimen/x25dp"
            android:layout_marginBottom="@dimen/x13dp"
             android:layout_marginLeft="@dimen/x14dp"
            android:text="北京市朝阳区 XXX接到XXX号"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20dp"
            android:layout_below="@id/tv_medicalName"
            android:background="@drawable/community_homepage_arrow"
            />
    </RelativeLayout>

</LinearLayout>