<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include layout="@layout/title_layout_dark" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x48dp"
        android:background="@color/cbg_color"
        android:divider="@color/bg_color"
        android:visibility="gone"
        android:dividerHeight="@dimen/x1dp"
        android:scrollbars="none" />

    <View
        android:layout_width="@dimen/x1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x48dp"
        android:layout_toRightOf="@id/listview"
        android:background="@color/bg_color" />

    <TextView
        android:id="@+id/tv_opinion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x1dp"
        android:layout_marginTop="@dimen/x48dp"
        android:padding="@dimen/x14dp"
        android:textColor="@color/fct_color"
        android:textSize="@dimen/ts_content"
        android:layout_toRightOf="@id/listview"
        android:background="@color/bg_color" />

</RelativeLayout>