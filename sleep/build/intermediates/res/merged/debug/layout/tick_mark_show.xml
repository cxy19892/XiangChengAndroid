<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/cbg_color">

    <RelativeLayout
        android:id="@+id/rl_kedu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x15dp" >

         <SeekBar
            android:id="@+id/sb_time_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:max="720"
            android:paddingLeft="@dimen/x8dp"
            android:paddingRight="@dimen/x8dp"
            android:progress="25"
            android:progressDrawable="@drawable/seekbar_img"
            android:thumb="@drawable/ic_zb_normal"
            android:visibility="gone" />
         
        <SeekBar
            android:id="@+id/sb_time_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:max="720"
            android:paddingLeft="@dimen/x4dp"
            android:paddingRight="@dimen/x4dp"
            android:progress="25"
            android:progressDrawable="@drawable/seekbar_img"
            android:thumb="@drawable/index_icon" />

        <LinearLayout
            android:id="@+id/br"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x8dp"
            android:layout_below="@id/sb_time_value"
            android:layout_marginTop="@dimen/x4dp"
            android:gravity="center_vertical"
            android:background="@drawable/custom_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/left_sicircle" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/text_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#8644FE" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_color" />

            <TextView
               android:id="@+id/text_th"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/right_sicircle" />
        </LinearLayout>

       
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_kedu"
        android:layout_marginTop="@dimen/x4dp"
        android:layout_marginLeft="@dimen/x15dp"
        android:layout_marginRight="@dimen/x15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="7h"
            android:textColor="#7F7D92"
            android:textSize="@dimen/ts_sub" />

        <View
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/time4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="9h"
            android:textColor="#7F7D92"
            android:textSize="@dimen/ts_sub" />

        <View
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ll"
        android:layout_marginLeft="@dimen/x25dp"
        android:layout_marginRight="@dimen/x25dp"
        android:layout_marginTop="@dimen/x4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="偏早"
            android:textColor="#7F7D92"
            android:textSize="@dimen/ts_sub" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:text="健康"
            android:textColor="#7F7D92"
            android:textSize="@dimen/ts_sub" />


        <TextView
            android:id="@+id/time5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1.0"
            android:text="偏晚"
            android:textColor="#7F7D92"
            android:textSize="@dimen/ts_sub" />

    </LinearLayout>

</RelativeLayout>