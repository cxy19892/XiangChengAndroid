<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pop_dialog_margin_bottom">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialogb_color"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/list_item_margin_normal"
            android:textSize="@dimen/textsize_small"
            android:background="@color/dialogb_color"
            android:textColor="@color/ct_color"
             />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_setting_line_height"
            android:background="@color/bg_color" />

        <Button
            android:id="@+id/btn_allow_open_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:background="@drawable/btn_gray1_bg"
            android:gravity="center"
            android:text="允许"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/textsize_normal" />
        
        </LinearLayout>
        <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_small"
                android:background="@color/bg_color"/>
        
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialogb_color" >

        <Button
            android:id="@+id/btn_refuse_open_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:background="@drawable/btn_gray1_bg"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/textsize_normal" />
    </RelativeLayout>
    

</LinearLayout>
