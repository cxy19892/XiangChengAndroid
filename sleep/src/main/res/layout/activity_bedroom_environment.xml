<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include layout="@layout/title_layout_dark" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/bg_color"
        android:verticalSpacing="0dp"
        android:numColumns="2"
        android:layout_marginTop="@dimen/x48dp"
        android:scrollbars="none"
        android:paddingLeft="@dimen/x8dp"
        android:paddingRight="@dimen/x8dp"
        android:listSelector="#00000000"
        android:horizontalSpacing="@dimen/x8dp"/>

    <include
        android:id="@+id/no_net"
        layout="@layout/layout_no_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x48dp"
        android:visibility="gone"/>
</RelativeLayout>