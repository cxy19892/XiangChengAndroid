<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comm_bg_listview_item"
    android:padding="@dimen/x15dp" >

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/x80dp"
        android:layout_height="@dimen/x60dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:maxLines="2"
        android:textSize="@dimen/ts_content"
        android:textColor="@color/ct_color"
        android:layout_toRightOf="@id/iv_pic"
        android:layout_marginLeft="@dimen/x10dp"
        />

</RelativeLayout>