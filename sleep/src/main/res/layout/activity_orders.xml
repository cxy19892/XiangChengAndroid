<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >
    
    <include layout="@layout/title_layout_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_order_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/x12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_order_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/x12dp"
            android:text="TextView" />

    </LinearLayout>
    
    
    <com.yzm.sleep.indicator.UnderlinePageIndicator
            android:id="@+id/order_f_indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
             />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
