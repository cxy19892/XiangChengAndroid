<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cbg_color" >
    
    <RadioGroup
        android:id="@+id/home_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cbg_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="6dp" >

        <RadioButton
            android:id="@+id/home_tabs_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/home_tab2"
            android:gravity="center"
            android:text="名医"
            android:drawablePadding="2dp"
            android:textColor="@color/color_home_tab"
            android:textSize="@dimen/ts_min" />

        <RadioButton
            android:id="@+id/home_tabs_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_tab1"
            android:gravity="center"
            android:text="主页"
            android:drawablePadding="2dp"
            android:textColor="@color/color_home_tab"
            android:textSize="@dimen/ts_min" />
        
        <RadioButton
            android:id="@+id/home_tabs_btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/home_tab3"
            android:gravity="center"
            android:text="知识库"
            android:drawablePadding="2dp"
            android:textColor="@color/color_home_tab"
            android:textSize="@dimen/ts_min" />

        <!-- <RadioButton
            android:id="@+id/home_tabs_btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/home_tab4"
            android:gravity="center"
            android:text="我的"
            android:drawablePadding="2dp"
            android:textColor="@color/color_home_tab"
            android:textSize="@dimen/ts_min" />
             -->
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentBottom="true" >

        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/second_color"/>
        
        <com.yzm.sleep.CircleImageView
            android:id="@+id/home_tabs_tip"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:layout_marginTop="10dp"
            android:src="#ff0000"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_tabs" />

    <TextView
        android:id="@+id/home_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_height"
        android:background="#be999999"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/img_add_record"
        android:layout_width="@dimen/x63dp"
        android:layout_height="@dimen/x54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_record"
        android:visibility="visible"/>

</RelativeLayout>