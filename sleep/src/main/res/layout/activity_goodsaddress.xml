<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_layout_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60dp"
        android:layout_marginTop="@dimen/x20dp"
        android:background="@color/cbg_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="@dimen/x60dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15dp"
            android:singleLine="true"
            android:text="收  货  人"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/ts_content" />

        <EditText
            android:id="@+id/ed_goodsUserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:background="@color/cbg_color"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/ct_color"
            android:textColorHint="@color/fct_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60dp"
        android:layout_marginTop="0.6dp"
        android:background="@color/cbg_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="@dimen/x60dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15dp"
            android:singleLine="true"
            android:text="电        话"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/ts_content" />

        <EditText
            android:id="@+id/ed_goodsPhon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60dp"
            android:layout_marginTop="@dimen/x1dp"
            android:background="@color/cbg_color"
            android:digits="1234567890-"
            android:gravity="center|left"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="11"
            android:textColor="@color/ct_color"
            android:textColorHint="@color/fct_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60dp"
        android:layout_marginTop="0.6dp"
        android:background="@color/cbg_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="@dimen/x60dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15dp"
            android:singleLine="true"
            android:text="收货地址"
            android:textColor="@color/onet_color"
            android:textSize="@dimen/ts_content" />

        <EditText
            android:id="@+id/ed_goodsaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cbg_color"
            android:gravity="center_vertical"
            android:minHeight="@dimen/x60dp"
            android:paddingBottom="@dimen/x15dp"
            android:paddingRight="@dimen/x15dp"
            android:paddingTop="@dimen/x15dp"
            android:textColor="@color/ct_color"
            android:textColorHint="@color/fct_color"
            android:textSize="@dimen/ts_content" />
    </LinearLayout>

</LinearLayout>