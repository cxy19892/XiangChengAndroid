<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cbg_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x16dp"
        android:text="你的睡眠改善计划"
        android:textStyle="bold"
        android:textColor="@color/onet_color"
        android:textSize="@dimen/ts_btn"
        android:id="@+id/suc_title"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x16dp"
        android:layout_marginRight="@dimen/x16dp"
        android:background="@color/cbg_color"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_getup_time"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_btn"
                android:gravity="center"
                android:textStyle="bold"
                android:text="08:59"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_circle_point_blue"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="固定起床时间"
                android:textSize="@dimen/ts_sub"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_below="@id/tv_getup_time"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_sleep_time"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_btn"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_circle_point_green"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最早上床时间"
                android:textSize="@dimen/ts_sub"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_below="@id/tv_sleep_time"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_sleep_xl"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_btn"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_circle_point_theme"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目标睡眠效率"
                android:textSize="@dimen/ts_sub"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10dp"
                android:layout_below="@id/tv_sleep_xl"
                 />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x16dp"
        android:text="非常好！你已开启香橙睡眠改善计划"
        android:textColor="@color/ct_color"
        android:textSize="@dimen/ts_content"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x16dp"
        android:layout_marginRight="@dimen/x16dp"
        android:background="@color/cbg_color"
        />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/x16dp"
        android:text="睡眠效率=睡眠时长/在床时长，代表入睡和保持睡眠的能力。我们将通过睡眠限制法，帮你逐步提高睡眠效率。\n\n每一阶段睡眠效率达标，我们会在周报中提示你下一阶段可提早15分钟上床，直到最后睡眠时长达到7小时。"
        android:textColor="@color/ct_color"
        android:textSize="@dimen/ts_sub"
        android:gravity="left" />


        </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我知道了"
        android:id="@+id/commit_btn"
        android:padding="@dimen/x10dp"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/ts_btn"
        android:background="@drawable/custom_bg9"
        android:layout_margin="@dimen/x16dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>