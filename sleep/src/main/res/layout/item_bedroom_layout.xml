<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/x8dp"
    android:paddingTop="@dimen/x8dp" >

    <RelativeLayout
        android:id="@+id/rl_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/rl_su"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custon_content_bg"
            android:orientation="vertical"
            android:padding="@dimen/x14dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家建议"
                android:textColor="@color/ct_color"
                android:textSize="@dimen/ts_sub" />

            <TextView
                android:id="@+id/tv_suggest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/x8dp"
                android:layout_weight="1"
                android:textColor="@color/fct_color"
                android:textSize="@dimen/ts_sub" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_pic"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/custon_content_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x8dp" >

            <ImageView
                android:id="@+id/pic"
                android:layout_width="@dimen/x60dp"
                android:layout_height="@dimen/x60dp"
                android:background="#ffffff"
                android:src="@drawable/about_logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12dp"
                android:textColor="@color/onet_color"
                android:textSize="@dimen/ts_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8dp"
                android:text="点击卡牌,出现相关建议"
                android:textColor="@color/ct_color"
                android:textSize="@dimen/ts_min"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/status"
            android:layout_width="@dimen/x50dp"
            android:layout_height="@dimen/x50dp"
            android:src="@drawable/ic_wdabiao"
            />
    </RelativeLayout>

</RelativeLayout>