<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comm_bg_listview_item" 
    android:paddingTop="@dimen/x8dp"
    android:paddingBottom="@dimen/x8dp"
    android:paddingLeft="@dimen/x10dp"
    android:paddingRight="@dimen/x10dp"
    >
    
    <ImageView 
        android:id="@+id/iv_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    
    <TextView 
        android:id="@+id/tv_texteview"
        android:layout_width="match_parent"
        android:textColor="@color/onet_color"
        android:textSize="@dimen/ts_sub"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14dp"
        android:layout_toRightOf="@id/iv_imageview"
        android:layout_centerVertical="true"
        />

</RelativeLayout>