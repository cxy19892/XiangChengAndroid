<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30304c"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pop_btn_cancle"
            style="?android:attr/buttonStyleSmall"
            android:paddingRight="@dimen/x18dp"
            android:paddingLeft="@dimen/x18dp"
            android:paddingTop="@dimen/x18dp"
            android:paddingBottom="@dimen/x18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_closed_icon"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/string_select_music"
            android:textColor="@color/ct_color"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/pop_btn_confirm"
            style="?android:attr/buttonStyleSmall"
            android:paddingRight="@dimen/x18dp"
            android:paddingLeft="@dimen/x18dp"
            android:paddingTop="@dimen/x18dp"
            android:paddingBottom="@dimen/x18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_finish_icon"
            android:background="@color/transparent" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fct_color_7f"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_dialog_for_rings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fct_color_7f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#30304C" >

        <RelativeLayout
            android:id="@+id/rel_my_rings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_my_rings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/x15dp"
                android:text="@string/string_my_music"
                android:textColor="@color/theme_color"
                android:textSize="16sp" />
            
            <!-- <View 
            android:id="@+id/my_rings_lines"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/btn_my_rings"
	        android:background="@color/color_8745ff"/> -->

        </RelativeLayout>
        
        <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>

        <RelativeLayout
            android:id="@+id/rel_get_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cbg_color"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_get_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/x15dp"
                android:text="@string/string_get_more"
                android:textColor="@color/ct_color"
                android:textSize="16sp" />

            <!-- <View 
            android:id="@+id/get_more_lines"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/btn_get_more"
	        android:background="@color/transparent"/> -->
        </RelativeLayout>

    </LinearLayout>
    
    <com.yzm.sleep.indicator.UnderlinePageIndicator
            android:id="@+id/dialog_f_indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
             />

</LinearLayout>