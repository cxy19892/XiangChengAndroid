<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pop_nearby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="性别"
        android:textColor="@color/cbg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_nearby_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/pop_nearby_male_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_bg_listview_item"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:drawableLeft="@drawable/rings_male_icon"
                android:text="男"
                android:textColor="@color/cbg_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_nearby_female_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/comm_bg_listview_item"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rings_female_icon"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="女"
                android:textColor="@color/cbg_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_nearby_all_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_bg_listview_item"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="全部"
                android:textColor="@color/cbg_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>