<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_theme_pic"
        android:layout_width="fill_parent"
        android:layout_height="300dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_theme_pic"
        android:background="@color/cbg_color"
        android:paddingLeft="@dimen/margin_padding_small"
        android:paddingRight="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/margin_padding_small"
        android:paddingTop="@dimen/margin_padding_small" >

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/textsize_round_hour" />

        <Button
            android:id="@+id/snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertTitle"
            android:layout_marginTop="@dimen/margin_padding_large"
            android:background="@drawable/alarm_clock_ring_button"
            android:text="小睡"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/textsize_xxlarge" />
        <Button
            android:layout_alignTop="@id/snooze"
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertTitle"
            android:layout_alignParentRight="true"
            android:background="@drawable/alarm_clock_ring_button"
            android:text="起床"
            android:textColor="@color/ct_color"
            android:textSize="@dimen/textsize_xxlarge" />
    </RelativeLayout>

</RelativeLayout>